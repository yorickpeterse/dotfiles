[diff]
    color = auto
    prompt = false
    algorithm = patience

[branch]
    color = auto

[core]
    autocrlf = input
    filemode = false
    excludesfile = ~/.config/git/ignore
    ignorecase = false
    pager = git-diff-highlight | less -RS
    attributesfile = ~/.config/git/attributes

[github]
    user = yorickpeterse

[color]
    ui = true

[color "diff"]
    old = "normal #f2d3cd"
    new = "normal #dfeacc"
    frag = blue

[color "diff-highlight"]
    oldhighlight = "#ffffff #c4331d"
    oldnormal = "normal #f2d3cd"
    newhighlight = "#ffffff green"
    newnormal = "normal #dfeacc"

[merge]
    tool = nvim
    prompt = false

[mergetool]
    keepBackup = false
    hideResolved = true

[mergetool "nvim"]
    cmd = nvim-mergetool $LOCAL $REMOTE $MERGED

[alias]
    today = log --since=\"1 day ago\" --author=\"Yorick Peterse\"

[push]
    default = current
    autoSetupRemote = true

[commit]
    gpgsign = true

[gpg]
    format = ssh

[gpg.ssh]
    allowedSignersFile = "~/.config/git/allowed_signers"

[protocol]
    version = 2

[fetch]
    prune = true

[pull]
    rebase = false

[init]
    defaultBranch = main

[include]
    path = "~/.config/git/local"

[log]
    date = format:%d %b %Y %H:%M %z
