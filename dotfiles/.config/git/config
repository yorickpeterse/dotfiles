[diff]
    color = auto
    prompt = false
    algorithm = patience

[branch]
    color = auto

[core]
    autocrlf = input
    filemode = false
    excludesfile = ~/.config/git/ignore
    ignorecase = false
    pager = git-diff-highlight | less -RS
    attributesfile = ~/.config/git/attributes

[github]
    user = yorickpeterse

[color]
    ui = true

[color "diff"]
    old = red
    new = green
    frag = blue
    commit = yellow bold

[color "diff-highlight"]
    oldnormal = "normal #f2d3cd"
    oldhighlight = "normal #edb5aa"
    newnormal = "normal #dfeacc"
    newhighlight = "normal #c6dba5"

[merge]
    tool = nvim
    prompt = false

[mergetool]
    keepBackup = false
    hideResolved = true

[mergetool "nvim"]
    cmd = nvim-mergetool $LOCAL $REMOTE $MERGED

[alias]
    today = log --since=\"1 day ago\" --author=\"Yorick Peterse\"

[push]
    default = current
    autoSetupRemote = true

[protocol]
    version = 2

[fetch]
    prune = true

[pull]
    rebase = false

[init]
    defaultBranch = main

[include]
    path = "~/.config/git/local"

[log]
    date = format:%d %b %Y %H:%M %z
